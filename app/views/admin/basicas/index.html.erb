<%- model_class = @basica -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.human_attribute_name(model_class.model_name.to_s.pluralize) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- Idea from http://blog.crowdint.com/2013/08/22/rails-template-inheritance.html -->
      <% atributos_index.each do |atr| %>
          <th><%= model_class.human_attribute_name(atr) %></th>
      <% end %>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @basica.try(:each) do |basica| %>
      <tr>
        <% atributos_index.each do |atr| %>
          <% if atr == "id_pais" then %>
            <td><%= Pais.find(basica[atr]).nombre%></td>
          <% elsif atr == "id_departamento" then %>
            <td><%= Departamento.find(basica[atr]).nombre%></td>
          <% elsif atr == "id_municipio" then %>
            <td><%= Municipio.find(basica[atr]).nombre%></td>
          <% elsif atr == "id_tclase" then %>
            <td><%= basica[atr].nil? ? "" : Tclase.find(basica[atr]).nombre%></td>
          <% elsif atr == "id_supracategoria" then %>
            <td><%= Supracategoria.find(basica[atr]).nombre%></td>
          <% elsif atr == "id_tviolencia" then %>
            <td><%= Tviolencia.find(basica[atr]).nombre%></td>
          <% elsif atr == "id_pconsolidado" then %>
            <td><%= Pconsolidado.find(basica[atr]).nombre%></td>
          <% elsif atr == "tipocat" then %>
            <td>
              <% h={C: "Colectivo", I: "Individual", O: "Otro"} %>
              <%= h[basica[atr].to_sym]%>
            </td>
          <% else %>
            <td><%= basica[atr] %></td>
          <% end %>
        <% end %>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_basica_path(basica), :class => 'btn btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_basica_path(basica),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @basica, { param_name: :pagina }  %>
<% ng = (!genclase.nil? && genclase == 'F') ? 'Nueva' : 'Nuevo' %>
<%= link_to t('.new', :default => [ng, t("helpers.links.new")]),
            new_admin_basica_path(@basica),
            :class => 'btn btn-primary' %>
