<div class="page-header">
  <h1><%=t '.title', :default => "Conteo general de vÃ­ctimizaciones" %></h1>
</div>

<%= simple_form_for :filtro, 
  { remote: true, 
    url: sivel2_gen.conteos_genvic_path,
    method: "get" } do |f| 
%>
  <div class="container">
    <div class="row filtro-fila">
      <div class="offset-sm-0 col-sm-2 offset-md-1 col-md-1">
        <%= @titulo_personas_fecha %>
      </div>
      <div class="offset-sm-0 col-sm-4">
        <%= f.input :fechaini,
          maxlength: 10, 
          size: 10,
          label: false,
          placeholder: 'Inicial',
          input_html: {
            type: "date",
            "data-contarautomatico" => ""
          }
        %>
      </div>
      <div class="offset-sm-1 col-sm-4">
        <%= f.input :fechafin,
          maxlength: 10, 
          size: 10,
          label: false,
          placeholder: 'Final',
          input_html: {
            type: "date",
            "data-contarautomatico" => ""
          }
        %>
      </div>
    </div>
    <div class="row filtro-fila">
      <div class="offset-sm-0 col-sm-2 offset-md-1 col-md-1">
      </div>
      <div class="offset-sm-0 col-sm-4">
        <%= f.input :etiqueta_id,
          collection: Msip::ModeloHelper.opciones_tabla_basica(
            Msip::Etiqueta, f, :etiqueta_id
          ),
          selected: (
            params[:filtro] ? 
            params[:filtro][:etiqueta_id] :
            ''
          ),
          include_blank: true,
          label_method: :presenta_nombre
        %>
      </div>
    </div>
    <div class="row filtro-fila">
      <div class="offset-md-5 col-md-2">
        <%= f.button :submit, 'Filtrar', class: 'btn btn-default',
          'data-turbo' => false %>
      </div>
    </div>
  </div>
<% end %>

<div id="resultado">
  <%= render 'sivel2_gen/conteos/genvic_tabla' %>
</div> <!-- id: resultado -->
