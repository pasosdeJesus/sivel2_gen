<div class='control-group nested-fields'>
  <div class="controls">
    <%  
        f.object = Sivel2Gen::CasoFotra.new if !f.object
    %>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :fecha_localizada, 
          :input_html => { "data-behaviour" => "datepicker" },
          :as => :string, :label => "Fecha" %>
      </div>
      <div class="col-md-6">
        <%= f.input :nombre %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :anotacion %>
      </div>
      <div class="col-md-6">
        <%= f.input(:tfuente, collection: [ 'Directa', 'Indirecta' ], 
                    label: "Tipo de Fuente",
                    include_blank: false ) %>
      </div>
    </div>
  
    <div class="row">
      <div class="col-md-6">
        <%= f.input :ubicacionfisica %>
      </div>
      <div class="col-md-6">
        <%= f.association :anexo_caso,
          collection: Sivel2Gen::AnexoCaso.where(id_caso: f.object.id_caso),
          label_method: lambda { |t| t.msip_anexo.adjunto_file_name },
          value_method: :id %>
      </div>
    </div>

    <%= f.input :id, as: :hidden %>

    <%= link_to_remove_association "Eliminar Otra Fuente", f, 
      class: 'btn btn-sm btn-danger',
      style: 'margin-bottom: 1em'
    %> 
  </div>
</div>
