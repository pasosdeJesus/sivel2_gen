<div id="combatientes_marco">
  <%= f.simple_fields_for :combatiente, 
    child_index: params[:index] do |com| %>
    <%= render '/sivel2_gen/casos/combatiente_campos', :f => com %>
  <% end %>
</div>

<%= f.submit "Agregar Combatiente",
  formaction: sivel2_gen.crear_combatiente_path(index: @caso.combatiente.size),
  formmethod: :post,
  formnovalidate: true,
  class: 'btn btn-sm btn-primary',
  name: "agregar-combatiente",
  id: "agregar-combatiente",
  input_html: {class: "tom-select"},
  data:  {
    disable_with: false } %>

<div style="display: none; position: fixed;
             left: 0px; top: 0px; width: 100%; height: 100%; z-index: 9999;
             background-color: rgba(174, 182, 191, 0.5) "
  id="mensaje-copia-com" class="spinner-cargando">
  <div class="spinner-border text-primary" role="status" style="margin: auto">
    <span class="sr-only"></span>
  </div>
  <span>Creando copia... </span>
</div>
