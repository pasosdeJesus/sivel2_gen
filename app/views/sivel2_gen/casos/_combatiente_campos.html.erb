<div class='control-group nested-fields'>
  <div class="controls">
    
    <%= f.input :id, as: :hidden %>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :nombre %>
      </div>
      <div class="col-md-6">
        <%= f.input :alias %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.input :edad %>
      </div>
      <div class="col-md-4">
        <%= f.input :sexo, 
          collection: Sip::Persona::SEXO_OPCIONES,
          include_blank: false %>
      </div>
      <div class="col-md-4">
        <%= f.association :rangoedad,
          collection: Sip::ModeloHelper.opciones_tabla_basica(
            Sivel2Gen::Rangoedad, f, :rangoedad
          ),
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
       </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :sectorsocial,
          collection: Sip::ModeloHelper.opciones_tabla_basica(
            Sivel2Gen::Sectorsocial, f, :sectorsocial
          ),
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :vinculoestado,
          collection: Sip::ModeloHelper.opciones_tabla_basica(
            Sivel2Gen::Vinculoestado, f, :vinculoestado
          ),
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
        </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :filiacion,
          collection: Sip::ModeloHelper.opciones_tabla_basica(
            Sivel2Gen::Filiacion, f, :filiacion
          ),
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :profesion,
          collection: Sip::ModeloHelper.opciones_tabla_basica(
            Sivel2Gen::Profesion, f, :profesion
          ),
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
         </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :organizacion,
          collection: Sip::ModeloHelper.opciones_tabla_basica(
            Sivel2Gen::Organizacion, f, :organizacion
          ),
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :presponsable,
          collection: Sip::ModeloHelper.opciones_tabla_basica(
            Sivel2Gen::Presponsable, f, :presponsable
          ),
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
        </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :resagresion,
          collection: Sip::ModeloHelper.opciones_tabla_basica(
            Sivel2Gen::Resagresion, f, :resagresion
          ),
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :antecedente,
          collection: Sip::ModeloHelper.opciones_tabla_basica(
            Sivel2Gen::Antecedente, f, :antecedente
          ),
        include_blank: false,
        label_method: :nombre, 
        value_method: :id %>
       </div>
    </div>

    <%= link_to_remove_association "Eliminar Combatiente", f, 
      {:class => 'btn-danger', :'data-existing' => 'true'} 
    %> 
  </div>
</div>
