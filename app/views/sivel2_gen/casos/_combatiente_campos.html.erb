<div class='control-group nested-fields'>
  <div class="controls">
    
    <%= f.input :id, as: :hidden %>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :nombre %>
      </div>
      <div class="col-md-6">
        <%= f.input :alias %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.input :edad %>
      </div>
      <div class="col-md-4">
        <%= f.input :sexo, 
          collection: Sip::Persona::SEXO_OPCIONES,
          include_blank: false %>
      </div>
      <div class="col-md-4">
        <%= f.association :rangoedad,
          collection: Sivel2Gen::Rangoedad.habilitados(:nombre),
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
       </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :sectorsocial,
          collection: Sivel2Gen::Sectorsocial.habilitados,
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :vinculoestado,
          collection: Sivel2Gen::Vinculoestado.habilitados,
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
        </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :filiacion,
          collection: Sivel2Gen::Filiacion.habilitados,
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :profesion,
          collection: Sivel2Gen::Profesion.habilitados,
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
         </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :organizacion,
          collection: Sivel2Gen::Organizacion.habilitados,
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :presponsable,
          collection: Sivel2Gen::Presponsable.habilitados,
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
        </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :resagresion,
          collection: Sivel2Gen::Resagresion.habilitados,
          include_blank: false,
          label_method: :nombre, 
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :antecedente,
        collection: Sivel2Gen::Antecedente.habilitados,
        include_blank: false,
        label_method: :nombre, 
        value_method: :id %>
       </div>
    </div>

    <%= link_to_remove_association "Eliminar Combatiente", f, 
      {:class => 'btn-danger', :'data-existing' => 'true'} 
    %> 
  </div>
</div>
