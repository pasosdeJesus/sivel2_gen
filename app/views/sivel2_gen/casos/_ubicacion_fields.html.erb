<div class='control-group nested-fields ubicacion'>
  <div class="controls">

    <div class="row">
      <div class="col-md-6">
        <% idpais = f.object.id_pais ? f.object.id_pais : Sip.paisomision %>
        <%= f.association :pais,
          collection: Sip::Pais.where(fechadeshabilitacion: nil).order(:nombre),
          label_method: :nombre,
          value_method: :id,
          selected: idpais
           %>
      </div>
      <div class="col-md-6">
        <%= f.association :departamento,
          collection: (Sip::Departamento.where(
           id_pais: idpais, 
            fechadeshabilitacion: nil).order(:nombre)),
          label_method: :nombre,
          value_method: :id %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :municipio,
          collection: (Sip::Municipio.where(
            id_departamento: f.object.id_departamento,
            fechadeshabilitacion: nil).order(:nombre)),
          label_method: :nombre,
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :clase,
          collection: (Sip::Clase.where(
            id_municipio: f.object.id_municipio,
            fechadeshabilitacion: nil).order(:nombre)),
          label_method: :nombre,
          value_method: :id %>
        <%= f.input :tclase, 
          readonly: true %> 
      </div>
    </div>

    <div class="row">
      <div class="col-md-5">
        <%= f.input :lugar %>
      </div>
      <div class="col-md-5">
        <%= f.input :sitio %>
      </div>
      <div class="col-md-2">
        <%= f.input :principal, 
          as: :boolean, 
          #label: false,
          input_html: { }
        %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.association :tsitio,
          collection: Sip::Tsitio.where(
            fechadeshabilitacion: nil).order(:nombre),
          label_method: :nombre, 
          value_method: :id,
          include_blank: false %>
      </div>
      <div class="col-md-4">
        <%= f.input :latitud %>
      </div>
      <div class="col-md-4">
        <%= f.input :longitud %>
      </div>
    </div>
		<%= f.input :id, as: :hidden %>
    <%= link_to_remove_association "Eliminar " + 
      Sip::Ubicacion.human_attribute_name("Ubicacion"), f, {
        class: 'btn btn-sm btn-danger', 
        'data-existing': 'true',
        style: 'margin-bottom: 1em'
      } 
    %> 
	</div>
</div>
