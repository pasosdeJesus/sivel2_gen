<div class='control-group nested-fields'>
  <div class="controls">

    <div class="row">
      <div class="col-md-6">
        <%= f.association :pais,
          collection: Sip::Pais.where(fechadeshabilitacion: nil).order(:nombre),
          label_method: :nombre,
          value_method: :id
           %>
      </div>
      <div class="col-md-6">
        <%= f.association :departamento,
          collection: (Sip::Departamento.where(
            id_pais: f.object.id_pais, 
            fechadeshabilitacion: nil).order(:nombre)),
          label_method: :nombre,
          value_method: :id %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :municipio,
          collection: (Sip::Municipio.where(
            id_departamento: f.object.id_departamento,
            fechadeshabilitacion: nil).order(:nombre)),
          label_method: :nombre,
          value_method: :id %>
      </div>
      <div class="col-md-6">
        <div class="divpa">
        <%= f.association :clase,
          collection: (Sip::Clase.where(
            id_municipio: f.object.id_municipio,
            fechadeshabilitacion: nil).order(:nombre)),
          label_method: :nombre,
          value_method: :id %>
        </div>
        <span class="tipoclase"></span>
      </div>
    </div>

    <div class="row">
      <div class="col-md-5">
        <%= f.input :lugar %>
      </div>
      <div class="col-md-5">
        <%= f.input :sitio %>
      </div>
      <div class="col-md-2">
        <%= f.input :principal, 
          as: :boolean, 
          #label: false,
          input_html: { }
        %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.association :tsitio,
          collection: Sip::Tsitio.where(
            fechadeshabilitacion: nil).order(:nombre),
          label_method: :nombre, 
          value_method: :id,
          include_blank: false %>
      </div>
      <div class="col-md-4">
        <%= f.input :latitud %>
      </div>
      <div class="col-md-4">
        <%= f.input :longitud %>
      </div>
    </div>
		<%= f.input :id, as: :hidden %>
		<%= link_to_remove_association "Eliminar " + 
				Sip::Ubicacion.human_attribute_name("Ubicacion"), f, 
				{:class => 'btn-danger', :'data-existing' => 'true'} 
		%> 
	</div>
</div>
