          </div>
          <div id="contexto" class="accordion-body collapse">
            <div class="accordion-inner">
              <%= render 'contextos', :f => f %>
            </div>
          </div>
        </div> <! -- accordion-group Contexto -->

        <div class="accordion-group">
          <div class="accordion-heading">
            <a class="accordion-toggle fichacambia" data-toggle="collapse" 
              href="#presponsable">Presuntos Responsables</a>
          </div>
          <div id="presponsable" class="accordion-body collapse">
            <div class="accordion-inner">
              <%= render 'presponsables', :f => f %>
            </div>
          </div>
        </div> <! -- accordion-group Presuntos Responsable-->

        <div class="accordion-group">
          <div class="accordion-heading">
            <a class="accordion-toggle fichacambia" data-toggle="collapse" 
