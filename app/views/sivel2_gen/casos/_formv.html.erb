              href="#etiquetas">Etiquetas</a>
          </div>
          <div id="etiquetas" class="accordion-body collapse">
            <div class="accordion-inner">
              <%= render 'etiquetas', :f => f %>
            </div>
          </div>
        </div> <! -- accordion-group Etiquetas -->

        <div class="accordion-group">
          <div class="accordion-heading">
            <a class="accordion-toggle fichacambia" data-toggle="collapse" 
              href="#evaluacion">Evaluación</a>
          </div>
          <div id="evaluacion" class="accordion-body collapse">
            <div class="accordion-inner">
              <%= render 'evaluacion', :f => f %>
            </div>
          </div>
