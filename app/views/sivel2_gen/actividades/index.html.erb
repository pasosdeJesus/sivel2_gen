<%- model_class = Sivel2Gen::Actividad -%>
<div class="page-header">
  <h1><%=t '.title', 
    :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% if @actividades.size > 1 %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
    sivel2_gen.new_caso_path,
    :class => 'btn btn-primary' 
  %>
<% end %>
<table class="table table-striped" border='1'>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:oficina) %></th>
      <th><%= model_class.human_attribute_name(:minutos) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:areas) %></th>
      <th><%= model_class.human_attribute_name(:objetivo) %></th>
      <th><%= model_class.human_attribute_name(:proyecto) %></th>
      <th><%= model_class.human_attribute_name(:resultado) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:observaciones) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @actividades.try(:each) do |actividad| %>
      <tr>
        <td><%= link_to actividad.id, sivel2_gen.actividad_path(actividad) %></td>
        <td><%= actividad.oficina.nombre if !actividad.oficina.nil? %></td>
        <td><%= actividad.minutos %></td>
        <td><%= actividad.nombre %></td>
        <td><%= actividad.actividadareas.map { |i| i.nombre} %></td>
        <td><%= actividad.objetivo %></td>
        <td><%= actividad.proyecto %></td>
        <td><%= actividad.resultado %></td>
        <td><%= actividad.fecha %></td>
        <td><%= actividad.observaciones %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      sivel2_gen.edit_actividad_path(actividad), :class => 'btn btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sivel2_gen.actividad_path(actividad),
                      :method => :delete,
                      :data => { :confirm => t(
                        '.confirm', 
                        :default => t("helpers.links.confirm", 
                                      :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @actividades, { param_name: :pagina }  %>
<%= link_to t('.new', :default => 'Nueva'),
  sivel2_gen.new_actividad_path,
  :class => 'btn btn-primary' 
%>
