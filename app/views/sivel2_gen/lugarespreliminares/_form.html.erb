<%- if current_usuario.nil?  %>
  <li><a href="usuarios/sign_in">Iniciar Sesión</a>
<%- else  %>
  <%= simple_form_for @lugarpreliminar, :html => { :class => 'form-horizontal' } do |f| %>
    <div data-role="content" class="form-inputs">
      <h3><center>FORMATO DE REGISTRO DE INFORMACIÓN PRELIMINAR DE PRESUNTOS LUGARES DE DISPOSICIÓN IRREGULAR DE CADÁVERES</center></h3>
    </div>
    
    <div class="multi-collapse">
      <a data-toggle="collapse" href='#basicospreliminar'>
        <h5>DATOS BÁSICOS</h5>
      </a>
      <div class="collapse multi-collapse" id="basicospreliminar">
        <div class="row">
          <div class="col-md-6">
            <%= f.input :fecha, 
              :input_html => { "data-behaviour" => "datepicker" },
              :as => :string %>
          </div>
          <div class="col-md-6">
            <%= f.input :codigositio %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :nombreusuario,
                input_html: {
                  value: f.object.nombreusuario ? f.object.nombreusuario : current_usuario.nombre
                }
            %> 
          </div>
          <div class="col-md-6">
            <%= f.input :organizacion %>
          </div>
        </div>
      </div>
      <br>
      <a data-toggle="collapse" href='#ubicacionpreliminar'>
        <h5>UBICACIÓN GEOGRÁFICA</h5>
      </a>
      <div class="collapse multi-collapse" id="ubicacionpreliminar">
        <div class="row">
          <div class="col-md-6">
             <%= render partial: 'campo_ubicacionpre', 
                   locals: {f: f, con_label: false} %>
          </div>
          <div class="col-md-6">
          </div>
        </div>
      </div>
      <br>

      <a data-toggle="collapse" href='#aportantepreliminar'>
        <h5>DATOS DEL APORTANTE</h5>
      </a>
      <div class="collapse multi-collapse" id="aportantepreliminar">
        <%= f.input :id_persona, as: :hidden %>
        <% if !f.object.persona %>
          <% f.object.persona = Sip::Persona.new%>
        <% end %>
        <%= f.simple_fields_for :persona do |p| %>
          <%= p.input :id, as: :hidden %>
          <% 
            ph = 'N'
            ac = {'data-autocompleta' => 'no' }
             if (!p.object.nombres || p.object.nombres == 'N' || p.object.nombres == '')
               ph = 'Buscar'
               ac = { }
             end
           %>
          <div class="row">
            <div class="col-md-3">
              <%= p.input :nombres, placeholder: ph,
                value_method: lambda {|t| '' if t.nombres == 'N'},
                :input_html => ac %>
            </div>
            <div class="col-md-3">
              <%= p.input :apellidos %>
            </div>
            <div class="col-md-3">
              <%= p.input :tdocumento_id,
                collection: Sip::Tdocumento.habilitados,
                label_method: lambda { |t| "#{t.sigla} | #{t.nombre}"},
                value_method: :id %>
            </div>
            <div class="col-md-3">
               <%= p.input :numerodocumento,
                 input_html: { 'data-toggle' => 'tooltip',
                   title: 'Si el tipo de documento es cédula de ciudadania teclee solo digitos'
               } %>
            </div>
          </div>
          <% @meses = [
            ["ENERO", 1], 
            ["FEBRERO", 2], 
            ["MARZO", 3], 
            ["ABRIL", 4], 
            ["MAYO", 5], 
            ["JUNIO", 6], 
            ["JULIO", 7], 
            ["AGOSTO", 8], 
            ["SEPTIEMBRE", 9], 
            ["OCTUBRE", 10], 
            ["NOVIEMBRE", 11], 
            ["DICIEMBRE", 12]] %>
          <% @dias = *(1..31) %>
          <div class="row">
            <div class="col-sm-3">
              <% @anios = *(1900..Date.today.year) %>
              <%= p.input :anionac, 
                collection: @anios %>
            </div>
            <div class="col-md-3">
              <%= p.input :mesnac, collection: @meses %>
            </div>
            <div class="col-md-3">
              <%= p.input :dianac, collection: @dias %>
            </div>
            <div class="col-md-3">
              <%= render partial: 'sip/personas/campo_sexo', locals: {f: p} %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.input :grabacion,
                label: false %>
              <label> Grabación de audio</label>
            </div>
            <div class="col-md-4">
              <%= f.input :parentezco,
                collection: Sip::Trelacion.habilitados,
                include_blank: false,
                label_method: :nombre, 
                value_method: :id %>
            </div>
            <div class="col-md-4">
              <%= f.input :telefono %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.association :tipotestigo,
                collection: Sivel2Gen::Tipotestigo.habilitados,
                include_blank: false,
                label_method: :nombre, 
                value_method: :id,
                selected: f.object.tipotestigo ? f.object.tipotestigo.id : 1
              %>
            </div>
            <div class="col-md-4">
              <% if f.object.otrotipotestigo && f.object.tipotestigo.id == 4 %>
                <% estipo = "display: block" %>
              <% else %>
                <% estipo = "display: none" %>
              <% end %>
              <div class="otrotipotestigo" style="<%= estipo %>">
                <%= f.input :otrotipotestigo %>
              </div>
            </div>
          </div>
      <br>
      <a data-toggle="collapse" href='#antepreliminar'>
        <h5>ANTECEDENTES PROPORCIONADOS POR EL APORTANTE</h5>
      </a>
      <div class="collapse multi-collapse" id="antepreliminar">
        <div class="row">
          <div class="col-md-12">
            <%= f.input :hechos %>
          </div>
          <div class="col-md-12">
            <%= f.input :ubicaespecifica %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="form-actions" style="text-align: center">
      <%= f.button :submit, 'Validar y Guardar', {
        class: 'btn-primary',
        onclick: 'window.sivel2_detenerEnviarCada60()'
      } %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
        sivel2_gen.lugarespreliminares_path, class: 'btn' 
      %>
    </div> <!-- form-action -->
  <% end %>
<% end %>
