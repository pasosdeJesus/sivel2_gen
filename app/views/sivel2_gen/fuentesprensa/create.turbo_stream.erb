<%= simple_form_for @caso do |form| %>
  <%= form.simple_fields_for :caso_fuenteprensa, child_index: params[:index] do |cfp_form| %>
    <%= turbo_stream.replace "agregar-casofuenteprensa" do %>
      <%= form.submit "Agregar fuente", 
            formaction: casos_fuenteprensa_path(cfp_form.index.to_i + 1), 
            formmethod: :post, 
            formnovalidate: true,
            class: 'btn btn-sm btn-primary agregar-vic',
            id: "agregar-casofuenteprensa" %>
    <% end %>

    <%= turbo_stream.append "fuentesprensa_frame" do %>
      <%= render "/sivel2_gen/casos/caso_fuenteprensa_campos", fp: cfp_form %>
    <% end %>
  <% end %>
<% end %>
