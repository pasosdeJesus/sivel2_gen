<%= simple_form_for @usuario, :html => { :class => 'form-horizontal' } do |f| %>

  <%= render 'usuario', :f => f %>

  <%= f.association :oficina, 
    collection: Sip::Oficina.habilitados.where("id<>'1'"),
    label: "Oficina",
    label_method: :nombre,
    value_method: :id,
    include_blank: true
  %>

