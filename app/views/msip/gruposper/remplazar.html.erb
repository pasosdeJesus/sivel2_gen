<%- model_class = Sivel2Gen::Caso %>
<%= simple_form_for @caso, 
  url: sivel2_gen.casos_path(@caso).sub(/\./,"/"),
  :html => { :class => 'form-horizontal' } do |c| %>
  <div class='campos-grupoper-con-victimacolectiva-id'>
    <%= c.simple_fields_for :victimacolectiva, @victimacolectiva, 
      child_index: @vicol_position do |vc| %>
      <%= vc.input :id, as: :hidden, value: @victimacolectiva.id.to_s %>
      <%= vc.simple_fields_for :grupoper do |g| %>
        <% s = render partial: 'sivel2_gen/casos/grupoper_campos',
          locals: { f: g, fvictimacolectiva: vc }  %>
        <%= s.html_safe %>
      <% end %>
    <% end %>
  </div>
<% end %>
