<%- model_class = Caso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Caso.human_attribute_name(:id) %></th>
      <th><%= Casosjr.human_attribute_name(:fecharec) %></th>
      <th><%= Casosjr.human_attribute_name(:regionsjr) %></th>
      <th><%= Casosjr.human_attribute_name(:asesor) %></th>
      <th><%= Caso.human_attribute_name(:fecha) %></th>
      <th><%= Caso.human_attribute_name(:memo) %></th>
      <th><%= Caso.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @casos.try(:each) do |caso| %>
      <tr>
        <td><%= link_to caso.id, caso_path(caso) %></td>
        <td><%= caso.casosjr.fecharec if !caso.casosjr.nil? %></td>
        <td><%= caso.casosjr.regionsjr.nombre if !caso.casosjr.nil? && !caso.casosjr.regionsjr.nil? %></td>
        <td><%= caso.casosjr.usuario.nusuario if !caso.casosjr.nil? && !caso.casosjr.usuario.nil? %></td>
        <td><%= caso.fecha %></td>
        <td><%= caso.memo %></td>
	      <td><%= caso.created_at.to_date if !caso.created_at.nil?%></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_caso_path(caso), :class => 'btn btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      caso_path(caso),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @caso, { param_name: :pagina }  %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_caso_path,
            :class => 'btn btn-primary' %>
