# encoding: UTF-8
module Admin
  class <%= nom_clase.pluralize %>Controller < BasicasController
    before_action :set_<%= nom_arch %>, only: [:show, :edit, :update, :destroy]
    load_and_authorize_resource

    def clase 
      "<%= nom_arch %>"
    end

    def set_<%= nom_arch %>
      @basica = <%= nom_clase %>.find(params[:id])
    end

    def atributos_index
      ["id", "nombre", "fechacreacion", "fechadeshabilitacion"]
    end

    def <%= nom_arch %>_params
      params.require(:<%= nom_arch %>).permit( *(atributos_index - ["id"]))
    end

  end
end
